<div class="header">
  <%= link_to root_path do %>
    <div class="logo">
      DEVELOMANAGER
    </div>
  <% end %>
  <div class="menu">
    <% if current_user %>
      <div class="dropdown">
        <button class="title" type="button" data-bs-toggle="dropdown" aria-expanded="false">
          My Projects
        </button>
        <div class="bar"></div>
        <ul class="dropdown-menu">
          <% current_user.projects.each do |project| %>
            <li><a class="dropdown-item" href="#"><% project.name %></a></li>
          <% end %>
        </ul>
      </div>
      <%= link_to destroy_user_session_path, data: {turbo_method: :delete}, class: "link" do %>
          <div class="title">Log out</div>
          <div class="bar"></div>
      <% end %>
    <% else %>
      <%= link_to new_user_session_path, class: "link" do %>
        <div class="title">Log in</div>
        <div class="bar"></div>
      <% end %>
    <% end %>
  </div>
</div>
