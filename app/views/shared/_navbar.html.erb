<div class="header">
  <div class="logo">
    <%= link_to "DEVELOMANAGER", root_path %>
  </div>

  <div class="menu">
    <% if current_user %>
      <div class="dropdown">
        <button class="title link" type="button" data-bs-toggle="dropdown" aria-expanded="false">
          <p>My Projects</p>
          <div class="bar"></div>
        </button>

        <ul class="dropdown-menu">
          <% current_user.project_users.each do |project_user| %>
            <li><a class="dropdown-item" href="#"><%= project_user.project.title %></a></li>
          <% end %>
        </ul>
      </div>
      <div id="logout-btn">
        <%= link_to destroy_user_session_path, data: {turbo_method: :delete}, class: "link" do %>
          <div class="title">Log out</div>
          <div class="bar"></div>
        <% end %>
      </div>

    <% else %>
      <%= link_to new_user_session_path, class: "link" do %>
        <div class="title">Log in</div>
        <div class="bar"></div>
      <% end %>
    <% end %>
  </div>
</div>
